<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.andrew.javafx_uni.Controller">
  <AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
    <MenuBar layoutY="2.0" prefHeight="25.0" prefWidth="211.0" AnchorPane.leftAnchor="0.0">
      <Menu mnemonicParsing="false" text="OS">
        <MenuItem fx:id="infoOS" mnemonicParsing="false" text="OS info" />
      </Menu>
      <Menu mnemonicParsing="false" text="CPU">
        <Menu mnemonicParsing="false" text="CPU Loading">
          <MenuItem fx:id="infoCPU" mnemonicParsing="false" text="Information" />
          <MenuItem fx:id="loadCPU" mnemonicParsing="false" text="CPU Loading" />
        </Menu>
      </Menu>
      <Menu mnemonicParsing="false" text="RAM">
        <MenuItem fx:id="loadRAM" mnemonicParsing="false" text="RAM Load" />
      </Menu>
      <Menu mnemonicParsing="false" text="Processes">
        <MenuItem fx:id="showProc" mnemonicParsing="false" text="Show Processes" />
      </Menu>
    </MenuBar>
  </AnchorPane>
</VBox>
